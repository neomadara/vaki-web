---
export const prerender = false;
import Layout from '../layouts/Layout.astro';
import { VakiList } from '../components/VakiList';

const { id } = Astro.params;

if (!id) {
    return Astro.redirect('/');
}

// Intentamos obtener desde import.meta.env (build-time/runtime) o process.env (runtime en Node)
const firebaseConfig = {
  apiKey: import.meta.env.PUBLIC_FIREBASE_API_KEY || (typeof process !== 'undefined' ? process.env.PUBLIC_FIREBASE_API_KEY : undefined),
  authDomain: import.meta.env.PUBLIC_FIREBASE_AUTH_DOMAIN || (typeof process !== 'undefined' ? process.env.PUBLIC_FIREBASE_AUTH_DOMAIN : undefined),
  projectId: import.meta.env.PUBLIC_FIREBASE_PROJECT_ID || (typeof process !== 'undefined' ? process.env.PUBLIC_FIREBASE_PROJECT_ID : undefined),
  storageBucket: import.meta.env.PUBLIC_FIREBASE_STORAGE_BUCKET || (typeof process !== 'undefined' ? process.env.PUBLIC_FIREBASE_STORAGE_BUCKET : undefined),
  messagingSenderId: import.meta.env.PUBLIC_FIREBASE_MESSAGING_SENDER_ID || (typeof process !== 'undefined' ? process.env.PUBLIC_FIREBASE_MESSAGING_SENDER_ID : undefined),
  appId: import.meta.env.PUBLIC_FIREBASE_APP_ID || (typeof process !== 'undefined' ? process.env.PUBLIC_FIREBASE_APP_ID : undefined)
};
---

<Layout title="Tu Lista">
	<VakiList client:load vakiId={id} firebaseConfig={firebaseConfig} />
</Layout>
