rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para los items de una Vaki
    match /vakis/{vakiId}/items/{itemId} {
      
      // Permitimos la lectura pública para que la consulta no falle.
      // La expiración "visual" la maneja el componente React y el borrado físico el TTL.
      allow read: if true;
      
      // SEGUIMOS PROTEGIENDO LA CREACIÓN:
      // Solo permite crear si se establece un expiresAt válido (máximo 24h desde ahora)
      allow create: if request.resource.data.expiresAt != null && 
                    request.resource.data.expiresAt <= request.time + duration.value(24, 'h');
      
      // Permitir actualizar o borrar (comprar productos o eliminarlos manualmente)
      allow update, delete: if true;
    }
  }
}
